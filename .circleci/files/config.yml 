version: 2.1

executors:
  docker-node-image:
    docker:
      - image: circleci/node:13.8.0
  
  aws-cli-image:
    docker:
      - image: amazon/aws-cli
  
  alpine-image:
    docker:
      - image: alpine:la

jobs: 
  build-frontend:
    executor: docker-node-image
    steps:
      - checkout
      - restore_cache:
          keys: [frontend-build]
      - run:
          name: Build front-end
          command: |
            cd frontend
            npm install
            npm run build
      - save_cache:
          paths: [frontend/node_modules]
          key: frontend-build
workflows:
  default:
    jobs:
      - backend-build        